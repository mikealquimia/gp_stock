<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="gp_stock_product_category_form" model="ir.ui.view">
      <field name="name">gp_stock_product_category_form</field>
      <field name="model">product.category</field>
      <field name="inherit_id" ref="product.product_category_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//sheet" position="inside">
          <notebook>
            <page string="Ajustes Avanzados">
              <separator string="Punto de control" />
              <field name="quality_control_test" widget="one2many">
                <tree editable="bottom">
                  <field name="name"/>
                  <field name="production_are_id"/>
                </tree>
              </field>
            </page>
          </notebook>
        </xpath>
      </field>
    </record>

  </data>
</odoo>